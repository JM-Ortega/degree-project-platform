<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<AnchorPane prefHeight="700.0" prefWidth="950.0" styleClass="root-white"
            stylesheets="@../styles/AnteproyectoJefeDepartamento.css" xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.unicauca.frontend.presentation.AnteproyectoController">

    <children>
        <VBox spacing="16.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"
              AnchorPane.topAnchor="10.0">

            <!-- Header -->
            <HBox spacing="12.0" styleClass="header">
                <Text styleClass="title" text="Asignar Anteproyecto / Jede de Departamento">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Text>
                <Pane HBox.hgrow="ALWAYS"/>
                <HBox alignment="CENTER_LEFT" spacing="8.0">
                    <ImageView fitHeight="40.0" fitWidth="77.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../images/iconUsuario.png"/>
                        </image>
                    </ImageView>
                    <VBox spacing="2.0">
                        <Label fx:id="nombreDocente" styleClass="label-strong" text="..."/>
                        <Label prefHeight="8.0" prefWidth="131.0" text="Jefe de Departamento"/>
                    </VBox>
                </HBox>
            </HBox>

            <!-- Barra de acciones -->
            <HBox spacing="10.0" styleClass="section">
                <Label fx:id="lblCupoDocente" styleClass="label-muted" text=""/>
                <Pane HBox.hgrow="ALWAYS"/>
                <TextField fx:id="txtBuscar" prefWidth="280.0" promptText="Buscar por tÃ­tulo, nombre o correo..."/>
                <Button fx:id="btnRefrescar" onAction="#onRefrescar" text="Refrescar"/>
            </HBox>
            <!-- Tabla de proyectos del docente -->
            <VBox spacing="8.0" VBox.vgrow="ALWAYS">
                <Label styleClass="subtitle" text="Anteproyectos sin asignacion de evaluadores">
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                </Label>
                <TableView fx:id="tblProyectos" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colTitulo" prefWidth="124.0" text="Id"/>
                        <TableColumn fx:id="colEstudianteNombre" prefWidth="236.0" text="Titulo"/>
                        <TableColumn fx:id="colEstudianteCorreo" prefWidth="462.0" text="Descripcion"/>
                        <TableColumn fx:id="colVersion" prefWidth="107.0" text="Fecha de creacion"/>
                    </columns>
                </TableView>
                <Label fx:id="lblTablaMsg" styleClass="label-error" text=""/>
            </VBox>
        </VBox>
    </children>
</AnchorPane>
