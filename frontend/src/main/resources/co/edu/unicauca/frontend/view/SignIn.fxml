<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" styleClass="fondo" stylesheets="@../styles/signin.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.unicauca.frontend.presentation.SignInController">

    <children>

        <!-- Panel izquierdo con imagen -->
        <ImageView fitHeight="600.0" fitWidth="452.0" layoutX="-7.0">
            <image>
                <Image url="@../images/Paisaje.jpg" />
            </image>
        </ImageView>

        <!-- Escudo superior derecho -->
        <ImageView fitHeight="117.0" fitWidth="82.0" layoutX="577.0" layoutY="24.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../images/Escudo.png" />
            </image>
        </ImageView>

        <!-- Formulario de credenciales -->
        <VBox layoutX="471.0" layoutY="149.0" prefHeight="362.0" prefWidth="304.0" styleClass="controlador_sign_in" AnchorPane.leftAnchor="471.0" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="149.0">
            <children>

                <!-- Usuario -->
                <Label text="USUARIO:">
                    <font>
                        <Font name="Roboto SemiBold" size="16.0" />
                    </font>
                </Label>
                <TextField fx:id="txtCorreo" prefHeight="30.0" prefWidth="297.0" promptText="usuario@unicauca.edu.co" styleClass="campo_de_entrada">
                    <font>
                        <Font name="Roboto Regular" size="14.0" />
                    </font>
                </TextField>
                <Label fx:id="errCorreo" styleClass="error error-hidden" text=" " />

                <!-- Contraseña -->
                <Label text="CONTRASEÑA:">
                    <font>
                        <Font name="Roboto SemiBold" size="16.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="6.0" />
                    </VBox.margin>
                </Label>
                <PasswordField fx:id="txtContrasena" promptText="***************" styleClass="campo_de_entrada">
                    <font>
                        <Font name="Calibri" size="14.0" />
                    </font>
                </PasswordField>
                <Label fx:id="errContrasena" prefHeight="71.0" prefWidth="296.0" styleClass="error error-hidden" text=" " />

                <!-- Rol con el que desea ingresar -->
                <Label text="INGRESAR COMO:">
                    <font>
                        <Font name="Roboto SemiBold" size="16.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="6.0" />
                    </VBox.margin>
                </Label>
                <ComboBox fx:id="cbRol" prefWidth="297.0" promptText="Seleccione..." />
                <Label fx:id="errRol" styleClass="error error-hidden" text=" " />

            </children>
        </VBox>

        <!-- Botón ingresar -->
        <Button layoutX="578.0" layoutY="526.0" mnemonicParsing="false" onAction="#ingresar" prefHeight="28.0" prefWidth="90.0" styleClass="boton" text="Ingresar" textFill="WHITE">
            <font>
                <Font name="Roboto Bold" size="14.0" />
            </font>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>

        <!-- Enlace a registro -->
        <Label layoutX="504.0" layoutY="562.0" text="¿Aún no tienes una cuenta?" />
        <Label fx:id="lnkCrearCuenta" layoutX="658.0" layoutY="562.0" onMouseClicked="#goToRegister" text="Crea una" textFill="#0059ff">
            <font>
                <Font name="Roboto Regular" size="12.0" />
            </font>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Label>

    </children>
</AnchorPane>
